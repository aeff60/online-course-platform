@page "/courses/{CourseId:int}"
@using OnlineCoursePlatform.Client.Components
@using OnlineCoursePlatform.Client.Services
@using OnlineCoursePlatform.Shared.DTOs
@inject ICourseApiService CourseApi
@inject IEnrollmentApiService EnrollmentApi
@inject NavigationManager Navigation

<PageTitle>@(_course?.Title ?? "รายละเอียดคอร์ส") - Online Course Platform</PageTitle>

@if (_isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (_course == null)
{
    <div class="container py-5 text-center">
        <i class="bi bi-exclamation-circle text-warning" style="font-size: 4rem;"></i>
        <h3 class="mt-3">ไม่พบคอร์ส</h3>
        <p class="text-muted">คอร์สที่คุณกำลังหาอาจถูกลบหรือไม่มีอยู่</p>
        <a href="/courses" class="btn btn-primary">ดูคอร์สทั้งหมด</a>
    </div>
}
else
{
    <!-- Course Header -->
    <section class="hero-section py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/" class="text-white-50">หน้าแรก</a></li>
                            <li class="breadcrumb-item"><a href="/courses" class="text-white-50">คอร์ส</a></li>
                            <li class="breadcrumb-item active text-white">@_course.Category</li>
                        </ol>
                    </nav>

                    <h1 class="display-5 fw-bold mb-3">@_course.Title</h1>
                    <p class="lead mb-4">@_course.ShortDescription</p>

                    <div class="d-flex flex-wrap gap-3 mb-4">
                        <div class="rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Floor(_course.Rating))
                                {
                                    <i class="bi bi-star-fill" aria-hidden="true"></i>
                                }
                                else if (i - _course.Rating < 1 && i - _course.Rating > 0)
                                {
                                    <i class="bi bi-star-half" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star" aria-hidden="true"></i>
                                }
                            }
                            <span class="ms-2">@_course.Rating.ToString("0.0") (@_course.RatingCount.ToString("N0") รีวิว)
                                <span class="visually-hidden">คะแนน @_course.Rating.ToString("0.0") จาก 5</span>
                            </span>
                        </div>
                        <span><i class="bi bi-people me-1"></i>@_course.EnrollmentCount.ToString("N0") นักเรียน</span>
                    </div>

                    <div class="d-flex align-items-center">
                            <img src="@_course.InstructorAvatar" alt="@_course.InstructorName" 
                                class="rounded-circle me-3" width="48" height="48" loading="lazy"
                                onerror="this.src='https://via.placeholder.com/48'" />
                        <div>
                            <small class="text-white-50">สอนโดย</small>
                            <div class="fw-semibold">@_course.InstructorName</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-4">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- What You'll Learn -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold mb-4">
                            <i class="bi bi-lightbulb text-warning me-2"></i>สิ่งที่คุณจะได้เรียนรู้
                        </h4>
                        <div class="row">
                            @foreach (var item in _course.WhatYouWillLearn)
                            {
                                <div class="col-md-6 mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>@item
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Course Content -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold mb-4">
                            <i class="bi bi-collection-play text-primary me-2"></i>เนื้อหาคอร์ส
                        </h4>
                        <p class="text-muted">
                            <i class="bi bi-book me-1"></i>@_course.TotalLessons บทเรียน
                            <span class="mx-2">•</span>
                            <i class="bi bi-clock me-1"></i>@_course.TotalDuration
                        </p>

                        <div class="lesson-list border rounded">
                            @foreach (var lesson in _course.Lessons)
                            {
                                <LessonItem Lesson="lesson" 
                                           IsLocked="@(!_isEnrolled && !lesson.IsFreePreview)"
                                           OnSelect="OnLessonSelect" />
                            }
                        </div>
                    </div>
                </div>

                <!-- Requirements -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold mb-4">
                            <i class="bi bi-clipboard-check text-info me-2"></i>ความต้องการเบื้องต้น
                        </h4>
                        <ul>
                            @foreach (var req in _course.Requirements)
                            {
                                <li class="mb-2">@req</li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Description -->
                <div class="card mb-4 border-0 shadow-sm">
                    <div class="card-body">
                        <h4 class="fw-bold mb-4">
                            <i class="bi bi-info-circle text-secondary me-2"></i>รายละเอียดคอร์ส
                        </h4>
                        <p style="white-space: pre-line;">@_course.Description</p>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card border-0 shadow sticky-top" style="top: 1rem;">
                    @if (!string.IsNullOrEmpty(_course.ImageUrl))
                    {
                        <img src="@_course.ImageUrl" class="card-img-top" alt="@_course.Title" loading="lazy" />
                    }
                    <div class="card-body">
                        <div class="text-center mb-4">
                            @if (_course.IsFree)
                            {
                                <h2 class="fw-bold text-success">ฟรี</h2>
                            }
                            else
                            {
                                <h2 class="fw-bold">฿@_course.Price.ToString("N0")</h2>
                            }
                        </div>

                        @if (_isEnrolled)
                        {
                            <a href="/learn/@CourseId" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="bi bi-play-fill me-2"></i>เข้าเรียน
                            </a>
                            <p class="text-center text-success mb-0">
                                <i class="bi bi-check-circle me-1"></i>คุณลงทะเบียนคอร์สนี้แล้ว
                            </p>
                        }
                        else
                        {
                            <button class="btn btn-primary btn-lg w-100 mb-3" @onclick="EnrollCourse" disabled="@_isEnrolling">
                                @if (_isEnrolling)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-cart-plus me-2"></i>
                                @(_course.IsFree ? "ลงทะเบียนเรียนฟรี" : "ลงทะเบียนเรียน")
                            </button>
                        }

                        <hr />

                        <h6 class="fw-bold mb-3">คอร์สนี้ประกอบด้วย:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-play-circle text-primary me-2"></i>
                                @_course.TotalLessons บทเรียน
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-clock text-primary me-2"></i>
                                @_course.TotalDuration ชั่วโมง
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-infinity text-primary me-2"></i>
                                เข้าถึงได้ตลอดชีพ
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-phone text-primary me-2"></i>
                                เรียนได้ทุกอุปกรณ์
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-award text-primary me-2"></i>
                                ใบประกาศนียบัตร
                            </li>
                        </ul>

                        @if (_course.Tags.Any())
                        {
                            <hr />
                            <div>
                                @foreach (var tag in _course.Tags)
                                {
                                    <span class="category-pill">@tag</span>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int CourseId { get; set; }

    private CourseDetailDto? _course;
    private bool _isLoading = true;
    private bool _isEnrolled;
    private bool _isEnrolling;

    protected override async Task OnInitializedAsync()
    {
        await LoadCourse();
    }

    private async Task LoadCourse()
    {
        _isLoading = true;

        var courseTask = CourseApi.GetCourseByIdAsync(CourseId);
        var enrolledTask = EnrollmentApi.CheckEnrollmentAsync(CourseId);

        await Task.WhenAll(courseTask, enrolledTask);

        _course = await courseTask;
        _isEnrolled = await enrolledTask;

        _isLoading = false;
    }

    private async Task EnrollCourse()
    {
        _isEnrolling = true;

        var result = await EnrollmentApi.EnrollCourseAsync(CourseId);
        if (result != null)
        {
            _isEnrolled = true;
            Navigation.NavigateTo($"/learn/{CourseId}");
        }

        _isEnrolling = false;
    }

    private void OnLessonSelect(LessonDto lesson)
    {
        if (_isEnrolled)
        {
            Navigation.NavigateTo($"/learn/{CourseId}?lesson={lesson.Id}");
        }
        else if (lesson.IsFreePreview)
        {
            // Show preview modal or navigate to preview
        }
    }
}
