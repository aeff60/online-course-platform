@using OnlineCoursePlatform.Shared.DTOs

<div class="card course-card h-100 shadow-sm">
    @if (!string.IsNullOrEmpty(Course.ImageUrl))
    {
        <img src="@Course.ImageUrl" class="card-img-top" alt="@Course.Title" loading="lazy" />
    }
    else
    {
        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
            <i class="bi bi-book text-white" style="font-size: 3rem;"></i>
        </div>
    }
    
    <div class="card-body d-flex flex-column">
        <div class="mb-2">
            <span class="category-pill">@Course.Category</span>
            <span class="category-pill">@Course.Level</span>
        </div>
        
        <h5 class="card-title">@Course.Title</h5>
        <p class="card-text text-muted small flex-grow-1">@TruncateText(Course.ShortDescription, 100)</p>
        
        <div class="course-meta mb-3">
            <span class="me-3">
                <i class="bi bi-person" aria-hidden="true"></i> @Course.InstructorName
            </span>
            <span>
                <i class="bi bi-clock" aria-hidden="true"></i> @Course.TotalDuration
            </span>
        </div>
        
            <div class="d-flex align-items-center mb-3">
            <div class="rating me-2">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Math.Floor(Course.Rating))
                    {
                        <i class="bi bi-star-fill" aria-hidden="true"></i>
                    }
                    else if (i - Course.Rating < 1 && i - Course.Rating > 0)
                    {
                        <i class="bi bi-star-half" aria-hidden="true"></i>
                    }
                    else
                    {
                        <i class="bi bi-star" aria-hidden="true"></i>
                    }
                }
            </div>
            <span class="text-muted small">@Course.Rating.ToString("0.0") (@Course.RatingCount.ToString("N0")) <span class="visually-hidden">คะแนน @Course.Rating.ToString("0.0") จาก 5</span></span>
        </div>
        
        <div class="d-flex justify-content-between align-items-center">
            @if (Course.IsFree)
            {
                <span class="price-badge free">ฟรี</span>
            }
            else
            {
                <span class="price-badge">฿@Course.Price.ToString("N0")</span>
            }
            
            <a href="/courses/@Course.Id" class="btn btn-outline-primary btn-sm">
                ดูรายละเอียด
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public CourseDto Course { get; set; } = new();

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        
        return text[..maxLength] + "...";
    }
}
